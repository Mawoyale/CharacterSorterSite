<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
  
         @*   <th>
                @Html.DisplayNameFor(model => model.VoteCount)
            </th>*@

            <th>
                @Html.DisplayNameFor(model => model.CharacterImage)
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.VoteCount)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CharacterImage)
                    <img src="@item.CharacterImage" class="img-fluid img-thumbnail" style="height: 150px" />
                </td>
          
                <!-- TO DO: Add links for Edit, Details, and Delete pages -->
                @*<td>
                    <a asp-controller="Characters" asp-action="Details" asp-route-Id="@item.Id">Details</a> |
                </td>*@
            </tr>
        }
    </tbody>
</table>
