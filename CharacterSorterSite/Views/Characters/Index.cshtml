@model IEnumerable<CharacterSorterSite.Models.Character>

@{
    ViewData["Title"] = "Index";
}

@*<h1>Index</h1>*@

@*<p>
    <a asp-controller="Characters" asp-action="Create">Create New</a>
</p>
